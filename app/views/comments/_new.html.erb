<%= form_for @comment, :url => ticket_comments_url(@ticket), :remote => true do |f| %>
  
  <p class="fields">
    <%= f.text_area :comment, :rows => 5, :cols => 5 %>
  </p>

  <p class="fields">
    <%= f.submit "Add Comment" %>
  </p>

<% end %>
<%= link_to "Hide Form", "#add_commentPane", :class => "hideForm" %>
